{
    "name": "docteurklein/event-store",
    "description": "An event store",
    "license": "MIT",
    "authors": [
        {
            "name": "Klein Florian",
            "email": "florian.klein@free.fr"
        }
    ],
    "require": {
        "php": ">=5.5"
    },
    "require-dev": {
        "ext-pdo-pgsql": "*",
        "ext-mongo": "*",
        "jms/serializer": "~0.16",
        "doctrine/common": "~2.4",
        "doctrine/dbal": "~2.4",
        "phpspec/phpspec": "2.*@dev",
        "docteurklein/funk-spec": "*@dev",
        "rhumsaa/uuid": "~2.7.1",
        "symfony/debug": "~2.5",
        "bossa/phpspec2-expect": "*@dev"
    },
    "autoload": {
        "psr-0": {
            "Knp\\Event": "src"
        }
    },
    "autoload-dev": {
        "psr-0": {
            "example": "",
            "funk": "",
            "PhpSpec": "src",
            "TestWork\\PhpSpecExtension": "src"
        }
    },
    "config": {
        "bin-dir": "bin"
    }
}
